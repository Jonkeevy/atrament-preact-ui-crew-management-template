{
  "private": true,
  "name": "atrament-ui",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --no-esm --no-prerender",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "analyze": "preact build --analyze --no-esm --no-prerender",
    "inklecate": "node node_modules/atrament/tools/convertAll.js src/game/ink",
    "lint": "eslint src",
    "test": "jest ./tests"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "@shopify/draggable": "1.0.0-beta.8",
    "atrament": "git+https://github.com/technix/atrament.git#v0.5.0",
    "history": "5.0.1",
    "howler": "2.2.3",
    "localforage": "1.10.0",
    "preact": "10.5.14",
    "preact-router": "3.2.1",
    "storeon": "3.1.4"
  },
  "devDependencies": {
    "enzyme": "3.11.0",
    "enzyme-adapter-preact-pure": "3.1.0",
    "eslint": "7.32.0",
    "eslint-config-synacor": "3.0.5",
    "if-env": "1.0.4",
    "jest": "27.0.6",
    "jest-preset-preact": "4.0.5",
    "preact-cli": "3.2.2",
    "preact-render-spy": "1.3.0",
    "preact-render-to-string": "5.1.19",
    "sirv-cli": "1.0.14"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
