{
  "private": true,
  "name": "atrament-ui",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --no-esm --no-prerender",
    "serve": "sirv build --port 8900 --cors --single",
    "dev": "preact watch --port 8900",
    "analyze": "preact build --analyze --no-esm --no-prerender",
    "inklecate": "node node_modules/atrament/tools/convertAll.js src/game/ink",
    "lint": "eslint src",
    "test": "jest ./tests"
  },
  "dependencies": {
    "@shopify/draggable": "1.0.0-beta.8",
    "atrament": "git+https://github.com/technix/atrament.git#v0.5.0",
    "history": "5.3.0",
    "howler": "2.2.3",
    "localforage": "1.10.0",
    "normalize.css": "8.0.1",
    "preact": "10.11.2",
    "preact-router": "4.1.0",
    "preact-transitioning": "^1.3.2",
    "storeon": "3.1.5"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.19.1",
    "eslint": "8.27.0",
    "eslint-config-preact": "1.3.0",
    "eslint-plugin-compat": "4.0.2",
    "if-env": "1.0.4",
    "jest": "29.3.1",
    "preact-cli": "3.4.1",
    "sirv-cli": "1.0.14"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
